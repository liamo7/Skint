<resources>

    <style name="Skint" parent="Base"/>

    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Overview.Collapse.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/overview_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Overview.Collapse.Value" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/overview_value_size</item>
    </style>

    <style name="Overview.Collapse.Value.Sub" parent="Overview.Collapse.Value">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/overview_sub_value_size</item>
    </style>

    <style name="FullWidthInput" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Card.Widget" parent="CardView.Light">
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/card_horizontal_margin</item>
    </style>

    <style name="RecordDatebar">
        <item name="android:elevation">2dp</item>
        <!--<item name="android:padding">16dp</item>-->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="RecordDatebar.Action" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="RecordDatebar.Value" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Create.Main.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/create_main_text_size</item>
    </style>

    <style name="Create.Main.Currency" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/create_main_text_size</item>
    </style>

    <style name="Create.Item.Action" parent="TextAppearance.AppCompat.Body2">
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/create_item_action</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
