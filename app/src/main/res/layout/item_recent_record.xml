<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recent_record_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_recent_record_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_recent_record_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Salary, Income"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/item_recent_record_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_recent_record_icon"
        app:layout_constraintTop_toTopOf="@id/item_recent_record_icon"/>

    <TextView
        android:id="@+id/item_recent_record_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Â£400.00"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_recent_record_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_recent_record_icon"
        app:layout_constraintTop_toBottomOf="@id/item_recent_record_name"/>

</android.support.constraint.ConstraintLayout>